<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset='UTF-8'>
    <title>Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>

</head>
{% include 'menu.tmpl' %}

<body>
<div class="operationWrap">
    <button class="btn btn-primary" onclick="addNewGood()">Добавить товар</button>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#scanDirLoadFiles">
        Добавить много товаров
    </button>
    <!-- Modal -->
    <div class="modal fade" id="scanDirLoadFiles" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Вы уверены?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-primary" onclick="scanDirLoadFiles()">Загрузить файлы</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class='mainTable'>
    <div class="headTable">
        <div class="headerCell id">Id</div>
        <div class="headerCell nameFull">Hаименование</div>
        <div class="headerCell price">Цена</div>
        <div class="headerCell param">Состав</div>
        <div class="headerCell weight">Вес</div>
        <div class="headerCell discount">скидка</div>
        <div class="headerCell loadFile">Загрузить фото</div>
        <div class="headerCell stickerAdmin">Fit</div>
        <div class="headerCell stickerAdmin">Hit</div>
        <div class="headerCell views">просмотры</div>
        <div class="headerCell operation">Операции</div>
    </div>

    {% for key in dateAnswer %}

        <form class="formAdmin" id="form{{ key.id }}"
              action="/public/admin/save" method="POST" enctype="multipart/form-data">
            <div class="rowCell id" name="id">{{ key.id }}</div>

            <input type="hidden" name="id" value="{{ key.id }}">
            <input type="hidden" name="edit" value="1">
            <input type="text" name="nameFull" class="rowCell nameFull" value="{{ key.nameFull }}">
            <input type="text" name="price" class="rowCell price" value="{{ key.price }}">
            <textarea type="text" name="param" class="rowCell param">{{ key.param }}</textarea>
            <input type="text" name="weight" class="rowCell weight" value={{ key.weight }}>
            <input type="text" name="discount" class="rowCell discount" value={{ key.discount }}>
            <input class="rowCell loadFile" type="file" id="userfile" name="userfile" class="rowCell  loadFile">
            {% if key.stickerFit == 1 %}
                <div class="rowCell stickerAdmin"><input type="checkbox" name="stickerFit" checked></div>
            {% else %}
                <div class="rowCell stickerAdmin"><input type="checkbox" name="stickerFit"></div>
            {% endif %}

            {% if key.stickerHit == 1 %}

                <div class="rowCell stickerAdmin"><input type="checkbox" name="stickerHit" checked></div>
            {% else %}
                <div class="rowCell stickerAdmin"><input type="checkbox" name="stickerHit"></div>
            {% endif %}

            <div class="rowCell views">{{ key.views }}</div>

            <input class="btnAdmin" type="submit" value="Сохранить">
            <button class="btnAdmin" ><a href="/public/admin/delete={{ key.id }}">Удалить</a></button>
        </form>
    {% endfor %}
</div>

</body>
</html>
