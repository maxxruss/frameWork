<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>Главная</title>
</head>
<body>
{% include 'menu.tmpl' %}




<div class='goodsTable'>
    {% for item in allGoods %}
        <div class='goodsWrap'>
            {% if item.discount>0 %}
                <div class="sticker"><img class="stickerImg" src="/public/css/star.png">
                    <span class="stickerTextFit">{{ item.discount }}</span></div>
            {% endif %}
            {% if item.stickerFit==1 %}
                <div class="sticker"><img class="stickerImg" src="/public/css/star.png">
                    <span class="stickerTextFit">Fit!</span></div>
            {% endif %}
            {% if item.stickerHit==1 %}
                <div class="sticker"><img class="stickerImg" src="/public/css/star.png">
                    <span class="stickerTextHit">Hit!</span></div>
            {% endif %}

            <div class="wrapGoodImg">
                <a href="#"><img class='goodImg' src="{{ item.miniPhoto }}"></a>
            </div>
            <div class="wrapGoodInfo">
                <div class='goodsNameFull'>{{ item.nameFull }}</div>
                <div class='goodsPrice'>{{ item.price }}<b>&#8381;</b></div>
                <div class='goodsParam'><span><b>Состав: </b></span>{{ item.param }}</div>
            </div>
            <div class="btnWrap">
                <input type='button' class='addToBasket btn' value='Дoбавить в корзину'
                       onclick="addToBasket({{ item.id }})" data-id='{{ item.id }}'>
                <input type='button' class='deleteToBasket btn' value='Удалить из корзины'
                       onclick="deleteToBasket({{ item.id }})" data-id='{{ item.id }}'>
            </div>
        </div>
    {% endfor %}
</div>


{% include 'footer.tmpl' %}



</body>
</html>